<div class="container">
  <h3>
    <%= link_to session[:condition].titleize, root_path %>
    <%= ":" %>
    <%= link_to "Makes", makes_path %>
    >
    <%= link_to @make, make_path(name: @make, id: @make_id) %>
    >
    <%= link_to @model, model_years_path(make: @make, model: @model, id: @model_id) %>
    >
    <%= @year %>
    >
    <%= "Styles" %>
  </h3>
</div>
<div class="row">
  <div class="large-6 columns">
    <%= image_tag(get_sample_image_for_style(@styles.first["subModels"].first["styleIds"])) %>
  </div>
</div>
<div class="row">
  <p></p>
  <% @styles.each do |style| %>
    <div class="large-6 columns">
      <%= link_to style_name(style), style_detail_path(id: style["id"]), :class => "button expand" %>
    </div>
  <% end %>
</div>
